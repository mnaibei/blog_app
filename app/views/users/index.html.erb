<div class="users_container">
  <ul>
    <% @users.each do |user| %>
      <li class="user-list-item">
        <div class="user-photo">
          <%= image_tag user.photo %>
        </div>
        <div class="user-info">
          <p class="user-name">
            <%= link_to user.name, user_path(user) %>
          </p>
          <p class="user-posts-counter">
            <h4>Number of posts:
              <%= user.posts_counter %></h4>
          </p>
        </div>
      </li>
    <% end %>
  </ul>
</div>
