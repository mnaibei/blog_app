<div class="container">
  <div class="user-info-container">
    <div class="user-photo">
      <%= image_tag @users.photo %>
    </div>
    <div class="user-info">
      <p class='user-name'><%= @users.name %></p>
      <p class='posts-counter'>
        Number of posts:
        <%= @users.posts.count %></p>
    </div>
  </div>
  <div class="user-bio">
    <p>Bio</p>
    <%= @users.bio %>
  </div>
  <% @users.recent_posts.each do |post| %>
    <div class="post-info">
      <p>Post #<%= post.id %></p>
      <p><%= link_to post.text, user_post_path(post.author, post.id) %></p>
      <div class="likes-comments">
        <p>Comments:
          <%= post.comments.count %></p>
        <p>Likes:
          <%= post.likes.count %></p>
      </div>
    </div>
  <% end %>
  <div class="buttons">
    <%= button_tag(type: 'button', class: 'see-all-posts') do %>
      <%= link_to user_posts_path(@users) do %>
        See all posts
      <% end %>
    <% end %>

    <button class="back-all-users">
      <%= link_to "Back to all users", root_path %>
    </button>
  </div>
</div>
